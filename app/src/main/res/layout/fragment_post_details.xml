<RelativeLayout
    android:layout_height="fill_parent" android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<ScrollView
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" tools:context="common.barter.com.barterapp.PostDetailsFragment"
    android:background="@color/primary_text_default_material_dark"
    android:clickable="true">

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="350dp"
    android:id="@+id/rlPagerContainer">

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rlPagerContainer2">
   <android.support.v4.view.ViewPager
       xmlns:android="http://schemas.android.com/apk/res/android"
       android:id="@+id/vpPostDetails"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true" />
</RelativeLayout>

    <LinearLayout android:id="@+id/imageCountLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        />
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/heartoff"
        android:id="@+id/ibAddToWishList"
        android:elevation="8dp"
        android:scaleType="fitXY"
        android:layout_gravity="right|bottom"/>

</RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlPagerContainer"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Title"
    android:id="@+id/tvTitlePostDetails"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Locality"
        android:layout_below="@+id/tvTitlePostDetails"
        android:id="@+id/tvLocalityPostDetails"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Posted"
        android:layout_below="@+id/tvTitlePostDetails"
        android:id="@+id/tvDateCreatedPostDetails"
        android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="33"
        android:layout_below="@+id/tvDateCreatedPostDetails"
        android:id="@+id/tvNumberOfViewsPostDetails"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description \n Description \nDescription\nDescription\nDescription\nDescription \n Description \nDescription\nDescription\nDescription"
        android:layout_below="@+id/tvNumberOfViewsPostDetails"
        android:id="@+id/tvDescriptionPostDetails"

        />
    </RelativeLayout>

</RelativeLayout>

    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make Offer"
        android:layout_gravity="center_horizontal"
        android:textSize="40px"
        android:id="@+id/btnMakeOffer"
        android:layout_alignParentBottom="true"


        />
</RelativeLayout>